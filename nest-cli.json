{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "kong": {
      "type": "library",
      "root": "libs/kong",
      "entryFile": "index",
      "sourceRoot": "libs/kong/src",
      "compilerOptions": {
        "tsConfigPath": "libs/kong/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "job": {
      "type": "application",
      "root": "apps/job",
      "entryFile": "main",
      "sourceRoot": "apps/job/src",
      "compilerOptions": {
        "tsConfigPath": "apps/job/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/api"
}